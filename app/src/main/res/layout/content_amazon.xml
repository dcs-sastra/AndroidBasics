<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Amazon"
    tools:showIn="@layout/activity_amazon">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_android_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/cl1"
                app:layout_constraintTop_toTopOf="@+id/cl1">
            </ImageView>

            <TextView
                android:id="@+id/title"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintTop_toTopOf="@+id/cl1"
                app:layout_constraintEnd_toEndOf="@+id/cl1"
                android:text="Realme Buds Air"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/description"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintEnd_toEndOf="@id/cl1"
                android:text="HD quality music, 10 years warranty, you'll love it for sure."
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/price"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintEnd_toEndOf="@id/cl1"
                android:text="₹10,000"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <RatingBar
                android:id="@+id/ratings"
                style="?android:attr/ratingBarStyleSmall"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintEnd_toEndOf="@id/cl1"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:numStars="5"
                android:max="5"
                android:rating="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_android_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/cl2"
                app:layout_constraintTop_toTopOf="@+id/cl2">
            </ImageView>

            <TextView
                android:id="@+id/title2"
                app:layout_constraintStart_toEndOf="@id/product_image2"
                app:layout_constraintTop_toTopOf="@+id/cl2"
                app:layout_constraintEnd_toEndOf="@+id/cl2"
                android:text="Mi Band 4"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/description2"
                app:layout_constraintStart_toEndOf="@id/product_image2"
                app:layout_constraintTop_toBottomOf="@id/title2"
                app:layout_constraintEnd_toEndOf="@id/cl2"
                android:text="HD quality music, 10 years warranty, you'll love it for sure."
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/price2"
                app:layout_constraintTop_toBottomOf="@id/description2"
                app:layout_constraintStart_toEndOf="@id/product_image2"
                app:layout_constraintEnd_toEndOf="@id/cl2"
                android:text="₹10,000"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <RatingBar
                android:id="@+id/ratings2"
                style="?android:attr/ratingBarStyleSmall"
                app:layout_constraintStart_toEndOf="@id/product_image2"
                app:layout_constraintEnd_toEndOf="@id/cl2"
                app:layout_constraintTop_toBottomOf="@id/price2"
                android:numStars="5"
                android:max="5"
                android:rating="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_android_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/cl3"
                app:layout_constraintTop_toTopOf="@+id/cl3">
            </ImageView>

            <TextView
                android:id="@+id/title3"
                app:layout_constraintStart_toEndOf="@id/product_image3"
                app:layout_constraintTop_toTopOf="@+id/cl3"
                app:layout_constraintEnd_toEndOf="@+id/cl3"
                android:text="Mi Band 4"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/description3"
                app:layout_constraintStart_toEndOf="@id/product_image3"
                app:layout_constraintTop_toBottomOf="@id/title3"
                app:layout_constraintEnd_toEndOf="@id/cl3"
                android:text="HD quality music, 10 years warranty, you'll love it for sure."
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/price3"
                app:layout_constraintTop_toBottomOf="@id/description3"
                app:layout_constraintStart_toEndOf="@id/product_image3"
                app:layout_constraintEnd_toEndOf="@id/cl3"
                android:text="₹10,000"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>

            <RatingBar
                android:id="@+id/ratings3"
                style="?android:attr/ratingBarStyleSmall"
                app:layout_constraintStart_toEndOf="@id/product_image3"
                app:layout_constraintEnd_toEndOf="@id/cl3"
                app:layout_constraintTop_toBottomOf="@id/price3"
                android:numStars="5"
                android:max="5"
                android:rating="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>